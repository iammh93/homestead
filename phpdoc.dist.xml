<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <paths>
        <output>public/core_docs/api</output>
        <cache>public/core_docs/build/cache</cache>
    </paths>
    <version number="3.0.0">
        <api format="php">
            <source dsn=".">
                <path>app</path>
                <path>bootstrap</path>
                <path>database</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>app/Http/**/APIs/*</path>
            </ignore>
        </api>
    </version>
</phpdocumentor>